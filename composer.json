{
    "name": "shztmk/limo",
    "description": "LIMO is a PHP library to abstract and mock literals when testing.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Limo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "shztmk",
            "email": "me@shztmk.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-intl": "*",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.23"
    }
}
